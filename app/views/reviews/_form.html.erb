<%= simple_form_for([@album, @album.reviews.build]) do |f| %>
	<%= f.error_notification %>
		<div id="rating-form">
			<label>Rating</label>
		</div>	
	  	<div class="form-inputs">
	    	<%= f.input :comment %>
	  	</div>
	  	<br />
	 	<div class="form-actions">
	    	<%= f.button :submit %>
	  	</div>
	<% end %>

	<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
	</script>